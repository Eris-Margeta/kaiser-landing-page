---
import { Image } from '@astrojs/image/components';

import ksvg from '../../assets/ksvg.svg';
---

<div class="w-full mx-auto bg-white dark:bg-black">
  <div class="w-full mx-auto max-w-3xl px-8 flex flex-row items-start justify-between py-3" x-data="{ open: false }">
    <div class="text-black dark:text-white">
      <a class="inline-flex font-display uppercase h-auto lg:w-auto w-20" href="/">
        <Image src={ksvg} alt="Kaiser Logo" 
      
      
      width={150}
      height={150}
      
      
      loading="eager" />
      </a>
    </div>
    <div>
      <a
        id="reservation-button"
        href="/rezervacija"
        class="items-center inline-flex w-30 mt-5 border duration-200 focus:ring-2 focus:ring-offset-2 justify-center px-4 py-1 rounded-full text-sm bg-black border-transparent focus:ring-white hover:bg-black/10 dark:bg-white hover:text-white dark:text-black dark:hover:bg-black dark:hover:ring-1 dark:hover:ring-white dark:hover:text-white"
      >
        Rezervacije
      </a>
      
    </div>
  </div>
</div>
